<title>Post Your Meme</title>

<form action="/memeadd/add" method="post" enctype="multipart/form-data">
    <input type="text" name="memetitle" id=""><br><br>
    <input type="file" accept="image/*" name="memeimg" onchange="loadFile(event)"><br><br>
    <img id="output" width="200" /><br><br>
    <input type="submit">
</form>

<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>